@* File: Pages/Shared/_Layout.cshtml - Premium Theme *@
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OpenDota Dashboard</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" asp-append-version="true" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png" asp-append-version="true" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png" asp-append-version="true" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom mb-4">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <span style="font-size: 2rem; margin-right: 0.5rem;">🎮</span>
                    <span class="fw-bold">OpenDota Dashboard</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-4">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="bi bi-house-fill"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Dashboard/Index">
                                <i class="bi bi-bar-chart-fill"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/TestIngestion">
                                <i class="bi bi-cloud-download-fill"></i> Test Ingestion
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Jobs/Index">
                                <i class="bi bi-list-task"></i> Jobs
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="toolsDropdown"
                                role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-tools me-2"></i> External Tools
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="toolsDropdown">
                                <li>
                                    <a class="dropdown-item" href="http://localhost:5050" target="_blank">
                                        <i class="bi bi-database-fill"></i> pgAdmin Database
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="http://localhost:15672" target="_blank">
                                        <i class="bi bi-diagram-3-fill"></i> RabbitMQ Queue
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <a class="dropdown-item" href="https://docs.opendota.com" target="_blank">
                                        <i class="bi bi-book-fill"></i> OpenDota Docs
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-4">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-white">
        <div class="container-fluid px-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-code-square me-2"></i>
                        <span>&copy; 2024 OpenDota Dashboard - Built with ASP.NET Core</span>
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <a href="https://docs.opendota.com" target="_blank" class="me-3">
                        <i class="bi bi-book"></i> API Docs
                    </a>
                    <a href="http://localhost:5050" target="_blank" class="me-3">
                        <i class="bi bi-database"></i> pgAdmin
                    </a>
                    <a href="http://localhost:15672" target="_blank">
                        <i class="bi bi-diagram-3"></i> RabbitMQ
                    </a>
                </div>
            </div>
        </div>
    </footer>
    </div>
    </div>
    </footer>

    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery (optional, but useful) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Your custom scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>